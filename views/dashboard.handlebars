

<div class="l-content">
    <div class="pricing-tables pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
            <div class="pricing-table pricing-table-free">
                <div class="pricing-table-header">
                    <h2>Add Customer</h2>
                    </div>
            <form class="new-post-form pure-form-stacked">
        <fieldset>
        <label for="post-title">Name</label>
        <input type="name" id="post-title" name="post-title"/>
        <label for="post-url">Phone Number</label>
        <input type="text" id="post-url" name="post-url" />
   
        <button type="submit" class="pure-button pure-button-primary">Submit Order</button>
    </fieldset>
</form>

        <div class="pure-u-1 pure-u-md-1-3">
            <div class="pricing-table pricing-table-enterprise">
                <div class="pricing-table-header">
                    <h2>Review Orders</h2>

                
                </div>

                <style>
    /* Customization to limit height of the menu */
    .custom-restricted {
        height: 300px;
        width: 320px;
        border: 1px solid gray;
        border-radius: 4px;
    }
      </style>

<div class="pure-menu pure-menu-scrollable custom-restricted">
       

<section>
  <h2>Orders</h2>
  <ol>
   {{#each posts as |post|}}
    <li>
      {{> order_items post}}
    </li>
       {{/each}}
  </ol>
</section>

                <button class="button-choose pure-button">Choose</button>
            </div>
        </div>
    </div> <!-- end of tables -->


<script src='/javascript/order.js'></script>
<script src='/javascript/customer.js'></script>
